<div class="container text-center mt-5">
  <h1 class="display-4 text-light fw-bold">Welcome to Zombie rbnb</h1>
  <p class="lead text-light">Rent zombies for any occasion!</p>
  
  <%= link_to "See our Zombies", zombies_path, class: "btn btn-lg mt-3 shadow-lg", 
    style: "background-color: #758173; border-color:rgb(38, 109, 55); color: white; padding: 15px 30px; font-size: 1.2rem; border-radius: 30px;" %>
</div>

<div class="container mt-5">
  <h2 class="text-center text-light mb-4">Featured Zombies</h2>
<div class="row">
  <% if @zombies.present? %>
    <% @zombies.each do |zombie| %>
      <div class="col-md-4">
        <div class="card text-center shadow-lg" style="border-radius: 15px; overflow: hidden;">
          <%= cl_image_tag(zombie.image, width: 300, height: 200, crop: :fill, class: "card-img-top") if zombie.image.present? %>
          <div class="card-body">
            <h5 class="card-title"><%= zombie.name %></h5>
            <p class="card-text">Race: <%= zombie.race %></p>
            <h5 class="text-success fw-bold"><%= zombie.price %>$ per day</h5>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-light text-center">No zombies available at the moment! üßü‚Äç‚ôÇÔ∏è</p>
  <% end %>
</div>


<style>
  body {
    background: url('https://res.cloudinary.com/dz68ybmap/image/upload/v1737804531/360_F_909199769_8alewCPsncEEdPbImV7iXrLXRqRmyqo2_zhpsrp.jpg') no-repeat center center fixed;
    background-size: cover;
  }
  
  body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: -1;
  }

  .btn:hover {
    background-color:rgb(82, 94, 80) !important; 
    border-color: #1e7e34 !important;
    transform: scale(1.05);
    transition: all 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  h1, p, .btn, .card {
    animation: fadeIn 1s ease-out;
  }
</style>
