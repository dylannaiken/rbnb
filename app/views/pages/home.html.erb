<div class="container text-center mt-5">
  <h1 class="display-4 fw-bold" style="color:rgb(255, 255, 255);">Welcome to Zombie rbnb</h1>
  <p class="lead" style="color:rgb(255, 255, 255);">Rent zombies for any occasion!</p>
  <%= link_to "See our Zombies", zombies_path, class: "btn btn-lg mt-3 shadow-lg",
              style: "background-color: #a9c5a0; border-color: #758173; color: #020402; padding: 15px 30px; font-size: 1.2rem; border-radius: 30px;" %>
</div>

<div class="container mt-5">
  <h2 class="text-center mb-4" style="color:rgb(255, 255, 255);">Featured Zombies</h2>
  <div class="row">
    <% if @zombies.present? %>
      <% @zombies.first(3).each do |zombie| %>
        <div class="col-md-4 mb-4">
          <div class="card text-center shadow-lg" style="border-radius: 15px; overflow: hidden; background-color: #758173; border: 1px solid #a9c5a0;">
            <div class="card-body">
              <h5 class="card-title" style="color:rgb(255, 255, 255);"><%= zombie.name %></h5>
              <p class="card-text" style="color: #c6dec6;">Race: <%= zombie.race %></p>
              <h5 class="fw-bold" style="color: #c5efcb;"><%= zombie.price %>$ per day</h5>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center" style="color: #c6dec6;">No zombies available at the moment! üßü‚Äç‚ôÇÔ∏è</p>
    <% end %>
  </div>
</div>

<style>
  body {
    background: url('https://res.cloudinary.com/dz68ybmap/image/upload/v1737804531/360_F_909199769_8alewCPsncEEdPbImV7iXrLXRqRmyqo2_zhpsrp.jpg') no-repeat center center fixed;
    background-size: cover;
    color: #c6dec6;
  }

  body::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(2, 4, 2, 0.7);
    z-index: -1;
  }

  .btn {
    transition: all 0.3s ease-in-out;
  }

  .btn:hover {
    background-color: #758173 !important;
    border-color:rgb(255, 255, 255) !important;
    transform: scale(1.05);
  }

  .card {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    backdrop-filter: blur(5px);
  }

  .card:hover {
    transform: scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  h1, p, .btn, .card {
    animation: fadeIn 1s ease-out;
  }
</style>
