<body class="bodyall bodyshow">
  <h1>Book a Zombie</h1>

  <section class="balcony">
    <h2>Balcony with a View of the Apocalypse</h2>
    <p>A balcony designed to offer an unobstructed view of an apocalypse-inspired setting, perfect for moments of relaxation.</p>
  </section>

  <section class="image-gallery">
    <img src="path/to/image1.jpg" alt="Image 1">
    <img src="path/to/image2.jpg" alt="Image 2">
    <img src="path/to/image3.jpg" alt="Image 3">
  </section>

  <section class="description">
    <h2>Description</h2>
    <p>Welcome to your post-apocalyptic refuge, where every corner is designed to withstand the zombie invasion...</p>
  </section>

  <main class="content">
    <section class="details">
      <h2>Details</h2>
      <p><strong>Height:</strong> <!-- Height --></p>
      <p><strong>Race:</strong> <!-- Race --></p>
      <p><strong>Skill:</strong> <!-- Skill --></p>
    </section>

    <section class="reservation">
      <h2>Book a Zombies</h2>
      <p><strong>225 €</strong> per night</p>
      <form>
        <div class="form-group">
          <label for="start_date">Arrival</label>
          <input type="text" id="start_date" name="start_date" required>
        </div>
        <div class="form-group">
          <label for="end_date">Departure</label>
          <input type="text" id="end_date" name="end_date" required>
        </div>
        <button type="button" id="calculate">Book Now</button>
      </form>

      <div class="price-summary">
        <p>225 € x <span id="nights">0</span> nights <span id="subtotal">0 €</span></p>
        <p>Feed the zombies <span>45 €</span></p>
        <p>Service Fee <span>198 €</span></p>
        <p class="total">Total <span id="total_price">0 €</span></p>
      </div>
    </section>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.9/dist/flatpickr.min.js"></script>
  <script>
    flatpickr("#start_date", { dateFormat: "Y-m-d", minDate: "today" });
    flatpickr("#end_date", { dateFormat: "Y-m-d", minDate: "today" });

    document.getElementById("calculate").addEventListener("click", function () {
      const startDate = new Date(document.getElementById("start_date").value);
      const endDate = new Date(document.getElementById("end_date").value);
      const pricePerNight = 225;
      const cleaningFee = 45;
      const serviceFee = 198;

      if (startDate && endDate && endDate > startDate) {
        const nights = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
        const subtotal = nights * pricePerNight;
        const totalPrice = subtotal + cleaningFee + serviceFee;

        document.getElementById("nights").textContent = nights;
        document.getElementById("subtotal").textContent = `${subtotal} €`;
        document.getElementById("total_price").textContent = `${totalPrice} €`;
      } else {
        alert("Please select valid dates.");
      }
    });
  </script>
</body>
</html>
