<h1><%= @zombie.name %></h1>

<h2>Réservations :</h2>
<ul>
  <% @zombie.bookings.each do |booking| %>
    <li>
      <strong>Date de début :</strong> <%= booking.start_date.strftime('%d/%m/%Y') %><br>
      <strong>Date de fin :</strong> <%= booking.end_date.strftime('%d/%m/%Y') %><br>
    </li>
  <% end %>
</ul>

<h2>Faire une réservation :</h2>
<%= form_with(model: [@zombie, Booking.new], local: true) do |form| %>
  <div>
    <%= form.label :start_date, 'Date de début' %>
    <%= form.date_field :start_date %>
  </div>
  <div>
    <%= form.label :end_date, 'Date de fin' %>
    <%= form.date_field :end_date %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div>
    <%= form.submit 'Confirmer la réservation' %>
  </div>
<% end %>

<style>
  h1 {
    font-size: 2em;
    color: #333;
  }

  h2 {
    font-size: 1.5em;
    color: #666;
  }

  ul {
    list-style-type: none;
    padding: 0;
  }

  li {
    background-color: #f9f9f9;
    margin-bottom: 10px;
    padding: 10px;
    border-radius: 5px;
  }

  form {
    margin-top: 20px;
  }

  form div {
    margin-bottom: 15px;
  }

  input[type="date"],
  input[type="submit"] {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
  }

  input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
    cursor: pointer;
    border-radius: 5px;
  }

  input[type="submit"]:hover {
    background-color: #0056b3;
  }
</style>
