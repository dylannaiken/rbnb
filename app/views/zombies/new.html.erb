<style>
body {
      background: #758173;
      font-family: 'Poppins', sans-serif;
      color: #fff;
      margin: 0;
      padding: 0;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: bold;
      margin-top: 20px;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 2px;
      text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    .form-container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .form-container input,
    .form-container textarea,
    .form-container select {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-family: 'Poppins', sans-serif;
      font-size: 1rem;
      color: #333;
    }

    .form-container input::placeholder,
    .form-container textarea::placeholder {
      color: #999;
    }

    .form-container .select-style {
      appearance: none;
      background-color: #fff;
      cursor: pointer;
    }

    .form-container .submit-btn {
      width: 100%;
      padding: 10px;
      background-color: #758173;
      border: none;
      border-radius: 5px;
      color: #fff;
      font-weight: bold;
      text-transform: uppercase;
      font-size: 1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .form-container .submit-btn:hover {
      background-color: rgb(63, 70, 62);
    }

    .form-container label {
      font-weight: bold;
      color: #758173;
      text-transform: uppercase;
      margin-bottom: 5px;
      display: block;
    }

    a {
      text-decoration: none;
      color: #758173;
      font-weight: bold;
      text-transform: uppercase;
      cursor: pointer;
      transition: color 0.3s ease;
    }

    a:hover {
      text-decoration: none;
      color: rgb(63, 70, 62);
    }
</style>
</head>
<body>
  <h1>Create Your Zombie </h1>
  <div class="form-container">
 featurer-map-home1
    <%= simple_form_for(@zombie) do |f| %>> 
      <div>
        <%= f.input :name, label: "Name", input_html: { placeholder: "Enter zombie's name" } %>
      </div>

      <div>
        <%= f.input :photo, as: :file %>
      </div>

      <div>
        <%= f.input :price, label: "Price", input_html: { placeholder: "Enter price in USD" } %>
      </div>

      <div>
        <%= f.input :description, label: "Description", as: :text, input_html: { placeholder: "Describe your zombie" } %>
      </div>

      <div>
        <%= f.input :height, label: "Height", input_html: { placeholder: "Enter height" } %>
      </div>

      <div>
        <%= f.input :race, label: "Race", collection: ['Undead', 'Mutant', 'Vampire'], input_html: { class: "select-style" } %>
      </div>

      <div>
        <%= f.input :skill, label: "Skill", input_html: { placeholder: "Enter skill level" } %>
      </div>

      <div>
        <%= f.submit "Create Zombies", class: "submit-btn" %>
      </div>
    <% end %>
  </div>

</body>
</html>

