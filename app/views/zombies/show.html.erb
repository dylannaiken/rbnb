<body class="bodyall bodyshow">
  <h1>Book a Zombie</h1>

  <section class="description">
    <h2>Description</h2>
    <p>Welcome to your post-apocalyptic refuge, where every corner is designed to withstand the zombie invasion...</p>
  </section>

  <main class="content">
    <section class="details">
      <h2>Details</h2>
      <%= cl_image_tag @zombie.photo.key %>
      <p><strong>Height:</strong> <!-- Height --></p>
      <p><strong>Race:</strong> <!-- Race --></p>
      <p><strong>Skill:</strong> <!-- Skill --></p>
    </section>

    <section class="reservation">
      <h2>Book a Zombie</h2>
      <!-- Booking Form (no changes needed for booking) -->
  <div class="card shadow-sm border-0 rounded-3 p-4" data-controller="price" data-price-price-per-night-value="<%= @zombie.price %>">
  <div class="card-body">
    <h2 class="h4 fw-bold mb-3">Book this Zombie</h2>
    <%= simple_form_for [@zombie, @zombie.bookings.new], html: { class: "needs-validation" } do |f| %>

      <!-- Start Date -->
      <div class="mb-3">
        <label class="form-label">Start Date</label>
        <%= f.input :start_date,
            as: :string,
            input_html: {
              class: "form-control",
              data: { controller: "datepicker", price_target: "startDate" }
            },
            label: false %>
      </div>

      <!-- End Date -->
      <div class="mb-3">
        <label class="form-label">End Date</label>
        <%= f.input :end_date,
            as: :string,
            input_html: {
              class: "form-control",
              data: { controller: "datepicker", price_target: "endDate" }
            },
            label: false %>
      </div>

      <!-- Total Price Display -->
      <div class="d-flex justify-content-between align-items-center fs-5 fw-semibold">
        <span>Total Price:</span>
        <span data-price-target="totalPrice">$0.00</span>
      </div>

      <!-- Book Now Button -->
      <div class="mt-3">
        <%= f.button :submit, "Book Now", class: "btn btn-danger w-100 fw-semibold py-2" %>
      </div>

    <% end %>
  </div>
</div>






